{
   "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist/",
      "removeComments": false,
      "sourceMap": true,
      "strict": true,
      "target": "ES5",
      "lib": ["ES2015"],
      "noEmitOnError": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
       "./node_modules",
       "./dist",
       "./test"
    ]
  }